{
   "manifest_version": 2,
   "name": "Save your wrist from ctrl-w",
   "description": "shortcut key to close tab by alt-w on windows",
   "version": "1.0.0",
   "content_scripts": [ {
      "all_frames": true,
      "matches": [ "http://*/*", "https://*/*", "ftp://*/*" ],
      "js": [ "pagescript.js" ]
   } ],
   "icons": {
      "48": "back48.png",
      "128": "back128.png"
   },
   "permissions": [
     "tabs",
     "<all_urls>"
   ],
   "background": {
     "scripts": [
       "background.js"
     ]
   }
}
